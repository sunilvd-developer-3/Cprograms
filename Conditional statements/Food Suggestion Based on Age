#include <stdio.h>

int main() {
    int age;

    printf("Enter your age: ");
    scanf("%d", &age);

    if (age < 0) {
        printf("Invalid age");
    } 
    else if (age <= 5) {
        printf("Suggested food: Mashed vegetables / Soft fruits");
    } 
    else if (age >= 13 && age <= 18) {
        printf("Suggested food: Burgers / Pasta");
    } 
    else if (age >= 51) {
        printf("Suggested food: Soup / Grilled fish");
    } 
    else {
        printf("Suggested food: Balanced healthy diet");
    }

    return 0;
}
